---
import Layout from '~/layouts/PageLayout.astro';
import * as homepageData from 'src/content/decap_statics/homepage.md';

// import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import Carousel, { type SlideProp } from '~/components/common/Carousel';
import CardsBlock, { type ImageData } from '~/components/widgets/CardsBlock.astro';

const metadata = {
  title: 'Triyaa Tantric Animation Studios',
  ignoreTitleTemplate: true,
};

type CTA = {
  heading: string;
  description: string;
  button: {
    text: string;
    link: string;
  };
};

let images = homepageData.frontmatter.images as ImageData[];
let slides = homepageData.frontmatter.slides as SlideProp[];
let cta = homepageData.frontmatter.cta as CTA;
---

<Layout metadata={metadata}>
  <Carousel client:load slides={slides} />

  <!-- 
  INFO: HERO SECTION REMOVED

    <div class="mt-30">
    <Hero image={{ src: '~/assets/images/hero-image.png', alt: 'AstroWind Hero Image' }}>
      <Fragment slot="title">
        <span class="text-accent dark:text-white highlight">Triyaa Animation studios</span>
      </Fragment>

      <Fragment slot="subtitle">
        <span class="hidden sm:inline">
          We specialize in
          <span class="font-semibold">3D character Animation</span>
          crafting mesmerizing
          <span class="font-semibold">visual effects</span>
          for feature films and television. 3D character animation, crafting mesmerizing visual effects for feature films
          and television. From
          <span class="font-semibold"> game cinematics</span>
          to trailers, commercials, documentaries, and beyond, we bring imagination to life.
        </span>
      </Fragment>
    </Hero>
  </div> 
  -->

  <CallToAction
    title={cta.heading}
    subtitle={cta.description}
    actions={[
      {
        variant: 'primary',
        text: cta.button.text,
        href: cta.button.link,
      },
    ]}
  />

  <!-- Masonry Block 1 -->
  <div class="mb-4 md:mb-8">
    <CardsBlock images={images} />
  </div>

  <Features2
    title="Contact us"
    items={[
      {
        title: 'Phone',
        description: '+977 (9841) 123-4567',
        icon: 'tabler:phone',
      },
      {
        title: 'Email',
        description: 'triyaa@gmail.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Location',
        description: '1234 Lorem Ipsum St, 12345, Miami, EEUU',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
