---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Careers',
};
---

<Layout metadata={metadata}>
  <main class="container mx-auto px-4 py-8">
    <h2 class="mb-4 text-2xl font-bold">Join Our Team</h2>
    <p class="mb-8">Explore exciting opportunities to work with us.</p>

    <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
      <div class="rounded-lg border border-gray-100 p-6 shadow-md">
        <h3 class="mb-2 text-xl font-semibold">Software Engineer</h3>
        <p class="mb-4">We're looking for talented software engineers to join our dynamic team.</p>
        <a href="#" class="hover:underline">Learn More</a>
      </div>

      <div class="rounded-lg border border-gray-100 p-6 shadow-md">
        <h3 class="mb-2 text-xl font-semibold">Marketing Manager</h3>
        <p class="mb-4">Join us in shaping our brand and reaching new audiences.</p>
        <a href="#" class="hover:underline">Learn More</a>
      </div>
    </div>

    <!-- Add more career opportunity cards here -->
  </main>
</Layout>
