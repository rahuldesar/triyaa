---
import Layout from '~/layouts/PageLayout.astro';
import ProjectDetailCarousel, { type SimplifiedProjectData } from '~/components/common/ProjectsDetailCarousel.tsx';

import * as technologyPageData from '~/content/decap_statics/technology.md';

const metadata = {
  title: 'Technology',
};

let projectDetails = technologyPageData.frontmatter.content as SimplifiedProjectData[];
let pageTitle = technologyPageData.frontmatter.title;
let pageDescription = technologyPageData.frontmatter.summary;
---

<Layout metadata={metadata}>
  <section class="body-font container mx-auto my-6 sm:my-8 lg:my-12">
    <div class="my-6 sm:my-8 lg:my-12">
      <div class="mx-auto max-w-screen-2xl px-4 md:px-8">
        <!-- <p class="mb-2 font-semibold md:mb-3 lg:text-lg">Introducing</p> -->

        <h2 class="mb-4 text-2xl font-bold md:mb-6 lg:text-3xl">{pageTitle}</h2>
        <p class="max-w-screen-md md:text-lg">{pageDescription}</p>
      </div>
    </div>

    {projectDetails.length ? <ProjectDetailCarousel client:load projectDetails={projectDetails} /> : null}
  </section>
</Layout>
