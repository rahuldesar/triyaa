---
export interface ProductGridItem {
  image: string;
  preTitle: string;
  title: string;
  url: string;
  altText: string;
}

interface Props {
  products: ProductGridItem[];
}

const { products } = Astro.props as Props;
---

<div class="py-6 sm:py-8 lg:py-12">
  <div class="mx-auto max-w-screen-2xl px-4 md:px-8">
    <div class="mb-6 flex items-end justify-between gap-4">
      <h2 class="text-2xl font-bold lg:text-3xl">Featured Works</h2>
    </div>
    <div class="grid gap-x-4 gap-y-6 sm:grid-cols-2 md:gap-x-6 lg:grid-cols-3 xl:grid-cols-4">
      {
        products.map((product) => (
          <div>
            <a
              href={product.url}
              class="group mb-2 block h-96 overflow-hidden rounded-lg bg-gray-100 shadow-lg lg:mb-3"
            >
              <img
                src={product.image}
                loading="lazy"
                alt={product.altText}
                class="h-full w-full object-cover object-center transition duration-200 group-hover:scale-110"
              />
            </a>

            <div class="flex flex-col">
              <span class="">{product.preTitle}</span>
              <a href="#" class="text-lg font-bold transition duration-100 lg:text-xl">
                {product.title}
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</div>
